<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.studyabroad.StudyAbroadDetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_cover"
                        android:background="@color/lightGray"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/iv_back"
                        android:layout_margin="@dimen/padding_medium"
                        android:src="@drawable/ic_back_new"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/padding_large"
                        android:layout_marginEnd="8dp">
                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_round_gradinet"
                            android:padding="@dimen/padding_medium"
                            android:id="@+id/iv_wish_list"
                            android:src="@drawable/ic_wish_list"
                            android:layout_marginEnd="5dp"/>
                        <ImageView
                            android:id="@+id/iv_share"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:padding="@dimen/padding_medium"
                            android:background="@drawable/bg_round_gradinet"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_share_white"
                            android:visibility="gone"/>
                       <!-- <TextView
                            android:id="@+id/tv_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share and earn"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/white"
                            android:paddingTop="@dimen/padding_small"
                            android:paddingBottom="@dimen/padding_small"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:background="@drawable/following_button_gradinet"
                            android:layout_gravity="bottom"/>-->
                        <TextView
                            android:id="@+id/tv_apply_scholarship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apply scholarship"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_small"
                            android:textColor="@color/green"
                            android:paddingTop="@dimen/padding_small"
                            android:paddingBottom="@dimen/padding_small"
                            android:paddingLeft="@dimen/padding_medium"
                            android:paddingRight="@dimen/padding_medium"
                            android:background="@drawable/follow_button"
                            android:layout_gravity="bottom"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_my_followers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 Followers"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_medium"
                        android:paddingRight="@dimen/padding_medium"
                        android:background="@drawable/following_button_gradinet"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="@dimen/padding_large"/>
                    <TextView
                        android:id="@+id/tv_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share and earn"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/orange"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        android:paddingLeft="@dimen/padding_medium"
                        android:paddingRight="@dimen/padding_medium"
                        android:background="@color/white"
                        android:layout_gravity="bottom"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="@dimen/padding_medium"
                        android:drawablePadding="5dp"
                        android:drawableEnd="@drawable/ic_giftcard"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:weightSum="100">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:id="@+id/iv_logo"
                        android:src="@drawable/college"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/padding_medium"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="100"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_college_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="College Name  College Name College ggggg"
                                android:layout_weight="70"
                                android:paddingBottom="2dp"
                                android:paddingRight="5dp"
                                android:layout_gravity="center"
                                android:textColor="@color/textPrimary"
                                android:textSize="@dimen/text_medium"
                                android:textStyle="bold" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="30"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="Follow"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:elevation="1dp"
                                    android:textSize="@dimen/text_small"
                                    android:id="@+id/tv_follow"
                                    android:textColor="@color/green"
                                    android:textAllCaps="false"
                                    android:background="@drawable/follow_button"
                                    android:layout_marginBottom="2dp"/>
                                <!--<TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:text="Scholarship"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:elevation="1dp"
                                    android:textSize="13sp"
                                    android:id="@+id/tv_apply_scholarship"
                                    android:textColor="@color/green"
                                    android:textAllCaps="false"
                                    android:background="@drawable/follow_button"
                                    android:layout_marginTop="2dp"/>-->
                            </LinearLayout>
                           <!-- <TextView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:text="Follow"
                                android:layout_weight="30"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:elevation="1dp"
                                android:textSize="@dimen/text_small"
                                android:id="@+id/tv_follow"
                                android:textColor="@color/green"
                                android:textAllCaps="false"
                                android:background="@drawable/follow_button" />-->
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:drawableStart="@drawable/ic_location"
                            android:textColor="@color/textSecondary"
                            android:textSize="@dimen/text_small"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:fillViewport="true"
            app:tabIndicatorColor="@color/blue"
            app:tabMode="fixed"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabSelectedTextColor="@color/textPrimary"
            app:tabTextColor="@color/textSecondary" />
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_study_abroad_details" />
    <include layout="@layout/bottom_buttons"
        android:id="@+id/bottom_button_layout"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_records_found_text"
        android:layout_gravity="center"
        android:text="@string/no_records_found_text"
        android:visibility="gone"/>


</android.support.design.widget.CoordinatorLayout>