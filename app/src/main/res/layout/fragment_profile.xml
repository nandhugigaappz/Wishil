                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:id="@+id/tv_user_enq_count"
                                android:textColor="@color/green"/>
