<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.partnershipwithwishill.AddPartnerCollegeActivity"
    tools:showIn="@layout/activity_add_partner_college">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:text="Institution Details"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:text="Institution Name"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_extra_small" />


            <EditText
                android:id="@+id/edt_institution_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@drawable/bg_edit_text"
                android:inputType="textCapSentences"
                android:padding="@dimen/padding_large"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_small" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:text="State"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_extra_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@drawable/bg_edit_text">
                <Spinner
                    android:id="@+id/state_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:text="City"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_extra_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@drawable/bg_edit_text">
                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>




<!--
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:text="Website"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_extra_small" />


            <EditText
                android:id="@+id/edt_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@drawable/bg_edit_text"
                android:inputType="textCapSentences"
                android:padding="@dimen/padding_large"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_small" />-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Contact Person Details"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:text="Name"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_extra_small" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@drawable/bg_edit_text"
                android:inputType="textCapSentences"
                android:padding="@dimen/padding_large"
                android:id="@+id/edt_contact_name"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:text="Mobile"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_extra_small" />


            <EditText
                android:id="@+id/edt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@drawable/bg_edit_text"
                android:inputType="number"
                android:padding="@dimen/padding_large"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_small" />

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:text="Email"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_extra_small" />


            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_small"
                android:background="@drawable/bg_edit_text"
                android:inputType="textEmailAddress"
                android:padding="@dimen/padding_large"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_small" />
-->

            <TextView
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/padding_large"
                android:background="@drawable/buttonstyle"
                android:gravity="center"
                android:padding="@dimen/padding_extra_large"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>