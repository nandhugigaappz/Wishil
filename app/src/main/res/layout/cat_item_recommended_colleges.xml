<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewStyleTwo"
    android:layout_margin="3dp">
    <RelativeLayout
        android:layout_width="210dp"
        android:layout_height="160dp">
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY" />

            <!--<ImageView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:background="@drawable/recommended1" />
-->
            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Trusted"
                android:gravity="center"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_medium"
            android:paddingTop="2dp">
            <TextView
                android:id="@+id/tv_college_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College Name College Name College Name"
                android:textStyle="bold"
                android:maxLines="2"
                android:textColor="@color/textPrimary"
                android:textSize="13sp"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_college_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College Name"
                android:drawableStart="@drawable/ic_location"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_extra_small"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>




    </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


