<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:id="@+id/ll_main"
        android:padding="@dimen/padding_medium"
        android:weightSum="100">

        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@color/lightGray"
                android:scaleType="centerCrop"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_medium"
            android:layout_weight="65"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_college_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College Name College Name College Name"
                android:textStyle="bold"
                android:maxLines="2"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/tv_college_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College Name"
                android:drawableStart="@drawable/ic_location"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_extra_small" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="end">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Follow"
                    android:layout_weight="30"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:elevation="1dp"
                    android:id="@+id/tv_follow"
                    android:textSize="@dimen/text_small"
                    android:textColor="@color/green"
                    android:textAllCaps="false"
                    android:background="@drawable/follow_button" />
               <!-- <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/iv_call"
                    android:padding="@dimen/padding_medium"
                    android:background="@drawable/bg_round_call"
                    android:src="@drawable/ic_call_new"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tv_send_enq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Enquiry"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/following_button"/>-->

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/lightGray" />
</LinearLayout>


